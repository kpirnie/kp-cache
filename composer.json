{
    "name": "kevinpirnie/kpt-cache",
    "description": "Modern Multi-Tier PHP Caching System with automatic tier discovery, connection pooling, and failover support",
    "type": "library",
    "keywords": [
        "cache", 
        "caching", 
        "redis", 
        "memcached", 
        "opcache", 
        "apcu", 
        "multi-tier",
        "performance",
        "php"
    ],
    "homepage": "https://github.com/kpirnie/kp-cache",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Pirnie",
            "email": "me@kpirnie.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "kevinpirnie/kpt-logger" : "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "ext-redis": "For Redis cache support",
        "ext-memcached": "For Memcached cache support",
        "ext-apcu": "For APCu cache support",
        "ext-yac": "For YAC cache support"
    },
    "autoload": {
        "psr-4": {
            "KPT\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KPT\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs -n --standard=PSR12 ./src",
        "cs-fix": "phpcbf src --standard=PSR12"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}